# ============================================================================
# @bniddam-labs/core - Environment Variables Template
# ============================================================================
# Copy this file to .env and update the values as needed
# IMPORTANT: These exact variable names must be used - they are case-sensitive
# and cannot be customized without modifying the config loader
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application name (string, optional, default: "NestJS Boilerplate")
APP_NAME=NestJS Boilerplate

# Backend application URL (string, optional, default: "http://localhost:3000")
APP_URL=http://localhost:3000

# Frontend application URL (string, optional, default: "http://localhost:3001")
FRONTEND_URL=http://localhost:3001

# Server port (number, optional, default: 3000)
PORT=3000

# Node environment (string, optional, default: "development")
# Valid values: development, production, staging, test
NODE_ENV=development

# CORS allowed origins (string, optional, default: "*")
# Use comma-separated list for multiple origins: "http://localhost:3000,http://localhost:3001"
CORS_ORIGIN=*

# Rate limiting - maximum requests per TTL window (number, optional, default: 100)
RATE_LIMIT_MAX=100

# Rate limiting - time-to-live in seconds (number, optional, default: 60)
RATE_LIMIT_TTL=60


# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================

# Database host (string, optional, default: "localhost")
DATABASE_HOST=localhost

# Database port (number, optional, default: 5432)
DATABASE_PORT=5432

# Database username (string, optional, default: "postgres")
DATABASE_USERNAME=postgres

# Database password (string, optional, default: "postgres")
# SECURITY: Change this in production!
DATABASE_PASSWORD=postgres

# Database name (string, optional, default: "nestjs_boilerplate")
DATABASE_NAME=nestjs_boilerplate

# Enable SSL for database connection (boolean, optional, default: false)
# Set to "true" or "false"
DATABASE_SSL=false

# Enable SQL query logging (boolean, optional, default: false)
# Set to "true" or "false"
DATABASE_LOGGING=false

# Use migrations instead of auto-sync (boolean, optional, default: false)
# When true: synchronize=false, migrationsRun=true
# When false: synchronize=true, migrationsRun=false
# Set to "true" or "false"
USE_MIGRATIONS=false

# Drop schema on startup (boolean, optional, default: false)
# WARNING: This will delete all data! Only use in development/testing
# Set to "true" or "false"
DATABASE_DROP_SCHEMA=false

# Enable Row-Level Security (boolean, optional, default: false)
# Set to "true" or "false"
RLS_ENABLED=false


# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

# JWT secret key (string, optional, default: "jwt-secret-key-DEVELOPMENT-ONLY")
# SECURITY: Must be at least 32 characters in production!
JWT_SECRET=jwt-secret-key-DEVELOPMENT-ONLY

# JWT refresh token secret (string, optional, default: "jwt-refresh-secret-key-DEVELOPMENT-ONLY")
# SECURITY: Must be at least 32 characters in production!
JWT_REFRESH_SECRET=jwt-refresh-secret-key-DEVELOPMENT-ONLY

# JWT token expiration (string, optional, default: "15m")
# Examples: "15m", "1h", "7d"
JWT_EXPIRES_IN=15m

# JWT refresh token expiration (string, optional, default: "7d")
# Examples: "7d", "30d", "90d"
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt hashing rounds (number, optional, default: 12)
# Higher = more secure but slower (10-12 recommended)
BCRYPT_ROUNDS=12

# Maximum failed login attempts before lockout (number, optional, default: 5)
AUTH_MAX_FAILED_ATTEMPTS=5

# Account lockout duration in minutes (number, optional, default: 30)
AUTH_LOCKOUT_DURATION_MINUTES=30

# Google OAuth (both required for Google auth, otherwise optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (both required for GitHub auth, otherwise optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=


# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis host (string, optional, default: "localhost")
REDIS_HOST=localhost

# Redis port (number, optional, default: 6379)
REDIS_PORT=6379

# Redis password (string, optional, default: undefined)
REDIS_PASSWORD=

# Redis database number (number, optional, default: 0)
REDIS_DB=0

# Cache TTL in seconds (number, optional, default: 3600)
CACHE_TTL=3600

# Redis key prefix (string, optional, default: "cache:")
REDIS_KEY_PREFIX=cache:


# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================

# Admin email (string, optional, default: "admin@example.com")
ADMIN_EMAIL=admin@example.com

# Admin password (string, optional, default: "change-me-in-production")
# SECURITY: Change this in production!
ADMIN_PASSWORD=change-me-in-production

# Admin allowed IPs (comma-separated list, optional, default: undefined)
# Example: "192.168.1.1,10.0.0.1"
ADMIN_ALLOWED_IPS=


# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email service status (string, optional, default: "disabled")
# Set to "enabled" to activate email sending
EMAIL_STATUS=disabled

# From email address (string, optional, default: "noreply@example.com")
EMAIL_FROM=noreply@example.com

# Brevo (formerly Sendinblue) API key (string, optional)
BREVO_API_KEY=

# SMTP Configuration (all optional, only needed if not using Brevo)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=


# ============================================================================
# S3 STORAGE CONFIGURATION
# ============================================================================

# S3-compatible endpoint (string, optional, default: "s3.amazonaws.com")
# For MinIO or other S3-compatible services, change this
S3_ENDPOINT=s3.amazonaws.com

# S3 port (number, optional, default: 443)
S3_PORT=443

# Use SSL for S3 connection (boolean, optional, default: true)
# Set to "true" or "false"
S3_USE_SSL=true

# S3 region (string, optional, default: "eu-west-3")
S3_REGION=eu-west-3

# S3 access key (string, optional, default: "")
S3_ACCESS_KEY=

# S3 secret key (string, optional, default: "")
S3_SECRET_KEY=

# S3 bucket name (string, optional, default: "nestjs-boilerplate-files")
S3_BUCKET_NAME=nestjs-boilerplate-files


# ============================================================================
# RABBITMQ CONFIGURATION
# ============================================================================

# RabbitMQ connection URI (string, optional)
# If not provided, will be constructed from individual components below
# Example: "amqp://user:pass@localhost:5672/vhost"
RABBITMQ_URI=

# RabbitMQ user (string, optional, default: "guest")
# Only used if RABBITMQ_URI is not provided
RABBITMQ_USER=guest

# RabbitMQ password (string, optional, default: "guest")
# Only used if RABBITMQ_URI is not provided
RABBITMQ_PASSWORD=guest

# RabbitMQ host (string, optional, default: "localhost")
# Only used if RABBITMQ_URI is not provided
RABBITMQ_HOST=localhost

# RabbitMQ port (string, optional, default: "5672")
# Only used if RABBITMQ_URI is not provided
RABBITMQ_PORT=5672

# RabbitMQ virtual host (string, optional, default: "/")
# Only used if RABBITMQ_URI is not provided
RABBITMQ_VHOST=/

# RabbitMQ exchange name (string, optional, default: "app.notifications")
RABBITMQ_EXCHANGE=app.notifications

# RabbitMQ dead-letter exchange name (string, optional, default: "app.notifications.dlx")
RABBITMQ_DLX_EXCHANGE=app.notifications.dlx


# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (string, optional, default: "info")
# Valid values: error, warn, info, debug, verbose
LOG_LEVEL=info

# Log format (string, optional, default: "json")
# Valid values: json, pretty
LOG_FORMAT=json

# Log transports (comma-separated list, optional, default: "console")
# Valid values: console, file
# Example: "console,file"
LOG_TRANSPORTS=console

# Log file path (string, optional, only needed if "file" transport is enabled)
LOG_FILE=

# Log file max size (string, optional, default: "10m")
# Examples: "10m", "100k", "1g"
LOG_MAX_SIZE=10m

# Log file max files to keep (number, optional, default: 5)
LOG_MAX_FILES=5


# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable new UI (boolean, optional, default: false)
# Set to "true" or "false"
FEATURE_NEW_UI=false

# Enable beta features (boolean, optional, default: false)
# Set to "true" or "false"
FEATURE_BETA=false

# Enable analytics (boolean, optional, default: true)
# Set to "true" or "false"
FEATURE_ANALYTICS=true

# Maintenance mode (boolean, optional, default: false)
# Set to "true" or "false"
MAINTENANCE_MODE=false
